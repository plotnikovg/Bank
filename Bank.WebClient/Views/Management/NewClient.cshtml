@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Login | Apaxy - Responsive Bootstrap 4 Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesdesign" name="author" />
    <!-- App favicon -->

    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <!-- App Css-->

    <link href="css/addClient.css" rel="stylesheet" type="text/css" />
    <link href="css/leftContainer.css" rel="stylesheet" type="text/css" />
    <link href="css/topContainer.css" rel="stylesheet" type="text/css" />

</head>

<body class="body">
<div class="leftContainer">
    <img src="images/Group 39.svg" class="logo">
    <div class="menu" style="justify-content: flex-start;">
        <div class="menu-item first" style="margin-top: 16px;">
            <img src="images/home.svg" style="margin-left: 16px;">
            <a style="margin-left: 10px;">Главная</a>
        </div>
        <div class="menu-item" style="margin-top: 16px;">
            <img src="images/plus.svg" style="margin-left: 16px;">
            <a style="margin-left: 10px;">Новый клиент</a>
        </div>

    </div>

</div>
<div class="topContainer">
    <div class="pageName" style="width: 200px;">
        Новый клиент
    </div>
    <div class="navBar">
        <input type="text" class="searchBar">
        <img src="images/notification.svg" style="margin-left: 20px;">
        <img src="images/account.svg" style="margin-left: 20px;">
    </div>
</div>
<div class="main">
    <div class="maincontainer">
        <div class="labelContainer">Имя</div>
        <br>
        <input type="text" placeholder="Имя">
        <input type="text" placeholder="Фамилия">
        <input type="text" placeholder="Отчество"><br>
        <div class="labelContainer">Паспортные данные</div>
        <br>
        <input type="text" placeholder="Серия паспорта" style="margin-top: 0px;">
        <input type="text" placeholder="Номер паспорта">
        <input type="text" placeholder="Дата регистрации">
        <input type="text" placeholder="Регион">
        <input type="text" placeholder="Город">
        <input type="text" placeholder="Улица">
        <input type="text" placeholder="Номер дома">
        <input type="text" placeholder="Корпус">
        <br>
        <div class="labelContainer">Аутентификационные данные</div>
        <br>
        <input type="text" placeholder="Номер телефона" style="margin-top: 0px;">
        <input type="text" placeholder="Пароль">

    </div>

</div>
</body>
</html>